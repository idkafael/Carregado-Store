{
  "name": "carregado-store",
  "version": "1.0.0",
  "description": "Carregado Store - E-commerce Platform",
  "main": "index.html",
  "scripts": {
    "start": "npx serve -s . -l 3000",
    "dev": "npx live-server --port=3000 --open=/",
    "build": "echo 'Frontend build completed'",
    "backend:install": "cd backend && npm install",
    "backend:start": "cd backend && npm start",
    "backend:dev": "cd backend && npm run dev",
    "deploy:frontend": "vercel --prod",
    "deploy:backend": "echo 'Backend deploy configured'",
    "setup": "npm run backend:install && npm install -g vercel",
    "test": "echo 'Running tests...'"
  },
  "dependencies": {
    "serve": "^14.2.1"
  },
  "devDependencies": {
    "live-server": "^1.2.2"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "ecommerce",
    "store",
    "frontend",
    "secure"
  ],
  "author": "Carregado Store",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/carregado-store/site"
  },
  "homepage": "https://carregado-store.com"
}
